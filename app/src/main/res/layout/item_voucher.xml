<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginEnd="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/iconselect" />

        <ImageView
            android:id="@+id/img_HinhAnh"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/voucher_onsales" />

        <TextView
            android:id="@+id/txtMenhGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Giảm giá tối đa: 40.000 VND"
            android:textSize="13sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/img_HinhAnh"
            app:layout_constraintTop_toTopOf="@+id/img_HinhAnh" />

        <TextView
            android:id="@+id/txtMoTa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Đơn tối thiểu: 100.000 VND"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/txtHanSD"
            app:layout_constraintStart_toStartOf="@+id/txtMenhGia"
            app:layout_constraintTop_toBottomOf="@+id/txtMenhGia" />

        <TextView
            android:textColor="@color/black"
            android:textSize="13sp"
            android:id="@+id/txtHanSD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hạn sử dụng: 29/5/2024"
            app:layout_constraintBottom_toBottomOf="@+id/img_HinhAnh"
            app:layout_constraintStart_toStartOf="@+id/txtMoTa" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>