<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/cardview_choxacnhan"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <ImageView
            android:id="@+id/product_image3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerInside"
            android:src="@drawable/micay" />

        <TextView
            android:id="@+id/product_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/product_image3"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/product_image3"
            android:text="Cơm trôn"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/product_price3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name3"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/product_image3"
            android:text="50.000 VND"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/soluong_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_price3"
            android:layout_marginStart="17dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/product_image3"
            android:text="Số lượng: "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/number_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_price3"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/soluong_text"
            android:text="2"
            android:textSize="15sp" />

        <View
            android:id="@+id/View_line1"
            android:layout_width="720dp"
            android:layout_height="1dp"
            android:layout_below="@+id/soluong_text"
            android:layout_marginTop="30dp"
            android:background="#CCCCCC" />







    </RelativeLayout>
</RelativeLayout>
