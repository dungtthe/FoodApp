<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main_view.home.Detail_SanPham_For_Home_Activity"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Product Image -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="230dp">
            <ImageView
                android:id="@+id/imageView_imgSanPham_for_detailsanpham"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/banhmi" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="0dp"
                android:id="@+id/imageView7_backicon_for_detailsanpham"
                android:src="@drawable/icon_back" />
        </FrameLayout>



        <!-- Product Name and Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">
            <TextView
                android:id="@+id/tvNameSp_forDetailSanPham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pepsi"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_price_for_detailSanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="10.000 VND"
                android:textColor="#F95569"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/img_traitim_forDetailSanPham"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="2dp"
                android:elevation="4dp"
                android:src="@drawable/icon_favourite" />

        </LinearLayout>

        <!-- Product Description -->
        <TextView
            android:id="@+id/product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvMotaSanPham_forDetailSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Món này ngon Món này ngon Món này ngon Món này ngon Món này ngon Món này ngon Món này ngon Món này ngon"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- Quantity Selector -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng mua"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
            <Button
                android:id="@+id/button_giam_forDetailSanPham"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/icon_decrease" />

            <EditText
                android:id="@+id/txtQuantity_SoLuongMuonThem_forDetailSanPham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:inputType="number"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginHorizontal="16dp" />

            <Button
                android:id="@+id/btn_Tang_forDetailSanPham"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/icon_increase" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng tồn"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/txtTonKhoSanPham_forDetailProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginHorizontal="16dp" />


        </LinearLayout>

        <!-- Total Price -->
        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: "
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="16dp" />
        <TextView
            android:id="@+id/tv_TongTien_forDetailSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20.000 VND "
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginTop="16dp" />

        <!-- Add to Cart Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:gravity="center_vertical"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:id="@+id/btn_DanhGia_forDetailSanPham"                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_button_hoanthanh"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btn_danhgia"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_button_hoanthanh"
                    android:padding="4dp"

                    android:src="@drawable/icon_comment"
                    android:scaleType="fitCenter"
                    android:elevation="4dp" />

                <TextView

                    android:text="Đánh giá"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/rounded_button_hoanthanh"
                    android:textColor="#FFFFFF" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_ThemVaoGioHang_forDetailSanPham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:background="@drawable/rounded_button_hoanthanh"
                android:gravity="center_vertical">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_button_hoanthanh"
                    android:padding="4dp"
                    android:src="@drawable/icon_shopping_cart"
                    android:scaleType="fitCenter"
                    android:elevation="4dp" />

                <TextView
                    android:text="Thêm vào giỏ hàng"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/rounded_button_hoanthanh"
                    android:textColor="#FFFFFF" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
