<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.start.SingupActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="900dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/img_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:srcCompat="@drawable/img_logo" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Đăng ký"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtHoTenDki"
            android:background="@drawable/edittext_dangnhap"
            android:textSize="17sp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop= "32dp"
            android:paddingLeft="15dp"
            android:hint = "Nhập họ và tên"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName" />
        <EditText
            android:id="@+id/edtSDTDki"
            android:background="@drawable/edittext_dangnhap"
            android:textSize="17sp"
            android:layout_margin="32dp"
            android:paddingLeft="15dp"
            android:hint = "Nhập SĐT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="number" />
        <EditText
            android:id="@+id/edtEmailDki"
            android:background="@drawable/edittext_dangnhap"
            android:textSize="17sp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:paddingLeft="15dp"
            android:hint = "Nhập Email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName" />
        <EditText
            android:id="@+id/edtTenDangNhapDki"
            android:background="@drawable/edittext_dangnhap"
            android:textSize="17sp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop= "32dp"
            android:paddingLeft="15dp"
            android:hint = "Nhập tên đăng nhập"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName" />
        <EditText
            android:id="@+id/edtMK1Dki"
            android:background="@drawable/edittext_dangnhap"
            android:textSize="17sp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop= "32dp"
            android:paddingLeft="15dp"
            android:hint = "Nhập mật khẩu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPassword" />
        <EditText
            android:id="@+id/edtMK2Dki"
            android:background="@drawable/edittext_dangnhap"
            android:textSize="17sp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop= "32dp"
            android:paddingLeft="15dp"
            android:hint = "Nhập lại mật khẩu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPassword" />
        <Button
            android:id="@+id/btnDangKyDki"
            android:layout_width="295dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop= "32dp"
            android:layout_height="wrap_content"
            android:background = "@drawable/button_dangnhap"
            app:backgroundTint = "@null"
            android:layout_gravity="center"
            android:text="Đăng ký"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDangNhapDki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background = "@drawable/button_dangnhap"
                app:backgroundTint = "@null"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:backgroundTint="#fd7c2e"
                android:textColor="@color/white"
                android:text="Đăng nhập" />

            <Button
                android:id="@+id/btnQuenMKDki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background = "@drawable/button_dangnhap"
                app:backgroundTint = "@null"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:backgroundTint="#fd7c2e"
                android:textColor="@color/white"
                android:text="Quên mật khẩu" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
