<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main_view.cart.activity_purchase">
    <!--  header of Pay  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ViewHeaderPay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF8F7B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- title of fragment -->
        <TextView
            android:id="@+id/txtPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:text="Thanh Toán"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="26dp"
            android:layout_marginEnd="80dp"
            android:background="#FF8F7B"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtPay"
            app:layout_constraintStart_toStartOf="@+id/ViewHeaderPay"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/iconback" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ViewContentPay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#EBF4F1"
        app:layout_constraintBottom_toTopOf="@+id/ViewLast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewHeaderPay">

        <ScrollView
            android:id="@+id/scv_Content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ListItemPay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/ln_Voucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ListItemPay">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="3dp"
                        android:background="@drawable/iconvoucher" />

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:text="Voucher"
                        android:textSize="16sp" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constr_Voucher"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ln_Voucher">

                    <TextView
                        android:textColor="#3A3737"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Áp dụng mã voucher"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/iconexpand"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/ln_DiaChi"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constr_Voucher">

                    <TextView
                        android:layout_width="18dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="3dp"
                        android:background="@drawable/icondiachi" />

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="4dp"
                        android:text="Địa chỉ nhận hàng"
                        android:textSize="16sp" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constr_Address"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ln_DiaChi">

                    <TextView
                        android:lineSpacingExtra="3dp"
                        android:textColor="#3A3737"
                        android:gravity="center_vertical|start"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:text="Tiền Thế Dũng | (84+) 012345678\nCổng sau,Ký túc xá khu B\nPhường Đông Hòa, Thành Phố Dĩ An,Tỉnh Bình Dương"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/iconexpand"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:id="@+id/ln_DonHang"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constr_Address">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="3dp"
                        android:background="@drawable/icondonhang" />

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:text="Chi tiết thanh toán"
                        android:textSize="16sp" />
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constr_DonHang"
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ln_DonHang">

                    <TextView
                        android:textColor="#3A3737"
                        android:id="@+id/txtTongTienMonHang"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Tổng tiền món hàng:"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:textColor="#3A3737"
                        android:id="@+id/txtDichVuVanChuyen"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dịch vụ vận chuyển:"
                        app:layout_constraintStart_toStartOf="@+id/txtTongTienMonHang"
                        app:layout_constraintTop_toBottomOf="@+id/txtTongTienMonHang" />
                    <TextView
                        android:textColor="#3A3737"
                        android:id="@+id/txtChiPhiGiamGia"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chi phí giảm giá:"
                        app:layout_constraintStart_toStartOf="@+id/txtDichVuVanChuyen"
                        app:layout_constraintTop_toBottomOf="@+id/txtDichVuVanChuyen" />
                    <View
                        android:id="@+id/Line"
                        android:scrollbarSize="10dp"
                        android:layout_marginTop="15dp"
                        app:layout_constraintStart_toStartOf="@+id/txtChiPhiGiamGia"
                        app:layout_constraintTop_toBottomOf="@+id/txtChiPhiGiamGia"
                        android:layout_width="370dp"
                        android:layout_height="1dp"
                        android:background="@android:color/black" />
                    <TextView
                        android:textColor="#3A3737"
                        android:id="@+id/txtTong"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng:"
                        app:layout_constraintStart_toStartOf="@+id/Line"
                        app:layout_constraintTop_toBottomOf="@+id/Line" />

                    <TextView
                        android:textColor="#3A3737"
                        android:id="@+id/txtGia1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="140.000 VND"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.922"
                        app:layout_constraintStart_toEndOf="@+id/txtTongTienMonHang"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:textColor="#3A3737"
                        android:id="@+id/txtGia2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="50.000 VND"
                        app:layout_constraintEnd_toEndOf="@+id/txtGia1"


                        app:layout_constraintTop_toBottomOf="@+id/txtGia1" />
                    <TextView
                        android:textColor="#3A3737"
                        android:id="@+id/txtGia3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="-20.000 VND"
                        app:layout_constraintEnd_toEndOf="@+id/txtGia2"


                        app:layout_constraintTop_toBottomOf="@+id/txtGia2" />
                    <TextView
                        android:textColor="#FF8F7B"
                        android:id="@+id/txtGia4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="121.000 VND"
                        app:layout_constraintEnd_toEndOf="@+id/txtGia3"

                        app:layout_constraintTop_toBottomOf="@+id/Line" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ViewLast"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewContentPay">
        <Button
            android:id="@+id/btnOrder"
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_btnoder"
            android:text="Đặt hàng"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txtSumPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Tổng thanh toán"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/btnOrder"

            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="121.000 VND"
            android:textColor="#FF8F7B"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnOrder"
            app:layout_constraintTop_toBottomOf="@+id/txtSumPay" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
