<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FF8F7B"
    android:layout_height="match_parent"
    tools:context=".cart.activity_voucher">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ViewHeaderVoucher"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FF8F7B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- title of voucher -->
        <TextView
            android:id="@+id/txtPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:text="Chọn voucher"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:layout_width="32dp"
            android:layout_height="26dp"
            android:layout_marginEnd="80dp"
            android:background="#FF8F7B"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toStartOf="@+id/txtPay"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="@+id/ViewHeaderVoucher"
            app:layout_constraintTop_toTopOf="@+id/txtPay"
            app:srcCompat="@drawable/iconback" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ViewContentVoucher"
        android:background="@drawable/custom_layout_contentofcontent"
        app:layout_constraintTop_toBottomOf="@+id/ViewHeaderVoucher"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ScrollView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/xxx"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@+id/txtGiamGia"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:text="Ưu đãi giảm giá"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/txtGiamGia"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/rcvListVoucherGiamGia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@+id/txtVanChuyen"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:text="Ưu đãi phí vận chuyển"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rcvListVoucherGiamGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/txtVanChuyen"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/rcvListVoucherVanChuyen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <Button
            android:textColor="@color/white"
            android:background="@drawable/custom_btnoder"
            android:text="Đồng ý"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="180dp"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
