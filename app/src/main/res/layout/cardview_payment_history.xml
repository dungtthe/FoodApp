<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/cardview_payment_history"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:padding="4dp">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/banhmi" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/product_image"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/product_image"
            android:text="Bánh mì"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/product_image">

            <ImageView
                android:id="@+id/scooter_image"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:src="@drawable/scooter" />

            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/scooter_image"
                android:text="15min"
                android:textSize="16sp" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_marginLeft="14dp">

                <TextView
                    android:id="@+id/DatHang_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/buy_btn"
                    android:text="Đặt hàng"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/buy_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerCrop"
                    android:src="@drawable/slideup" />

            </RelativeLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/product_image"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="119dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/product_image"
            android:text="20.000 VND"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/delivery_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a"
            android:layout_marginStart="13dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/product_image"
            android:text="Dec 30.2022| 14:20pm"
            android:textSize="16sp" />

        <View
            android:id="@+id/View"
            android:layout_width="500dp"
            android:layout_height="1dp"
            android:layout_below="@+id/delivery_time_text"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/product_image"
            android:background="#CCCCCC" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/View"
            android:layout_marginStart="14dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/product_image"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cash_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/magnetic_card" />

            <TextView
                android:id="@+id/money_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:text="Tiền mặt"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/payment_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_layout"
            android:layout_marginStart="13dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/product_image"
            android:text="Dec 30.2022| 14:20pm"
            android:textSize="16sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
