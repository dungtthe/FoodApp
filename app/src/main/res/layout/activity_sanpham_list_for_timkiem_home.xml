<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFA07A"
    tools:context=".view.main_view.home.SanPhamListTimKiemActivity">

    <View
        android:id="@+id/view_header"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:background="#FFA07A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_content"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@drawable/rounded_view_content_corners_setting"
        app:layout_constraintBottom_toTopOf="@+id/recycler_view_loaisp_for_timkiemsanpham_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_header" />
    <TextView
        android:id="@+id/tv_LoaiSanPham_for_timkiemsanpham_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_header" />

    <ImageView
        android:id="@+id/icon_back_button_for_timkiemsanpham_home"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/icon_back"
        app:layout_constraintBottom_toBottomOf="@+id/tv_LoaiSanPham_for_timkiemsanpham_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_LoaiSanPham_for_timkiemsanpham_home" />
    <View
        android:id="@+id/view_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_LoaiSanPham_for_timkiemsanpham_home" />

    <EditText
        android:id="@+id/search_edit_text_fortimkiem_home"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/search_background_for_home"
        android:hint="Tìm kiếm món ăn"
        android:paddingStart="20dp"
        android:paddingEnd="40dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_line"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/icon_search_for_timkiemsanpham_home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp"
        android:src="@drawable/ic_baseline_search_40_for_home_2"
        app:layout_constraintBottom_toBottomOf="@+id/search_edit_text_fortimkiem_home"
        app:layout_constraintEnd_toEndOf="@id/search_edit_text_fortimkiem_home"
        app:layout_constraintTop_toTopOf="@+id/search_edit_text_fortimkiem_home" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_loaisp_for_timkiemsanpham_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F2F7F5"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_content" />

</androidx.constraintlayout.widget.ConstraintLayout>